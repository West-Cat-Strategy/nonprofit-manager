# Plausible Analytics Configuration
# Copy this file to .env.plausible and update with your values

# Base URL where Plausible will be accessible
PLAUSIBLE_BASE_URL=http://localhost:8000

# Secret key base (generate with: openssl rand -base64 64)
PLAUSIBLE_SECRET_KEY_BASE=replace-with-64-char-random-string

# TOTP vault key (generate with: openssl rand -base64 32)
PLAUSIBLE_TOTP_VAULT_KEY=replace-with-32-char-random-string

# Database password
PLAUSIBLE_DB_PASSWORD=plausible_password

# Disable public registration (set to 'false' to allow signups)
PLAUSIBLE_DISABLE_REGISTRATION=true

# SMTP Configuration (optional, for email reports)
# PLAUSIBLE_MAILER_EMAIL=analytics@yourdomain.com
# PLAUSIBLE_SMTP_HOST=smtp.gmail.com
# PLAUSIBLE_SMTP_PORT=587
# PLAUSIBLE_SMTP_USER=your-email@gmail.com
# PLAUSIBLE_SMTP_PASSWORD=your-app-password
# PLAUSIBLE_SMTP_SSL=false

# Frontend Configuration
# The domain registered in Plausible for tracking
VITE_PLAUSIBLE_DOMAIN=localhost
# The URL where Plausible script is served
VITE_PLAUSIBLE_API_HOST=http://localhost:8000
