{
  "name": "nonprofit-manager-backend",
  "version": "0.1.0",
  "description": "Backend API for Nonprofit Manager platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register --transpileOnly src/index.ts",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --forceExit --testPathIgnorePatterns=src/__tests__/integration/",
    "test:unit:coverage": "jest --forceExit --coverage --testPathIgnorePatterns=src/__tests__/integration/",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "schema:export": "ts-node --transpileOnly scripts/export-schema-bundle.ts",
    "test:integration": "jest --forceExit src/__tests__/integration",
    "test:integration:coverage": "jest --forceExit --coverage src/__tests__/integration"
  },
  "keywords": [
    "nonprofit",
    "management",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mailchimp/mailchimp_marketing": "^3.0.80",
    "@otplib/preset-default": "^12.0.1",
    "@sentry/node": "^10.38.0",
    "@sentry/tracing": "^7.120.4",
    "@simplewebauthn/server": "^13.2.2",
    "bcryptjs": "^3.0.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csrf-csrf": "^4.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^17.3.1",
    "exceljs": "^4.4.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^8.0.1",
    "otplib": "^13.3.0",
    "pg": "^8.18.0",
    "redis": "^5.10.0",
    "stripe": "^20.3.1",
    "winston": "^3.19.0",
    "winston-transport": "^4.9.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mailchimp__mailchimp_marketing": "^3.0.22",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.2.3",
    "@types/nodemailer": "^7.0.10",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
